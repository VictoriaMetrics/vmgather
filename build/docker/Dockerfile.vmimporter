# syntax=docker/dockerfile:1
ARG GO_VERSION=1.22
FROM golang:${GO_VERSION}-alpine AS builder
WORKDIR /src
COPY . .
RUN apk add --no-cache git build-base && \
    CGO_ENABLED=0 GOOS=$TARGETOS GOARCH=$TARGETARCH go build -ldflags="-s -w" -o /out/vmimporter ./cmd/vmimporter

FROM gcr.io/distroless/base-debian12
WORKDIR /app
COPY --from=builder /out/vmimporter /usr/local/bin/vmimporter
EXPOSE 8081
ENTRYPOINT ["/usr/local/bin/vmimporter","-addr","0.0.0.0:8081"]
